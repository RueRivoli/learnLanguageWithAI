                      {{ word.role }}
                    </div>
                  </div>
                  <p class="italic font-medium">
                    {{ word.translation }}
                  </p>
                </div>

                <!-- Bottom section with ID and Learned button - no separator line -->
                <div class="flex items-center justify-between mt-4">
